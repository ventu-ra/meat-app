{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "outDir": "../out-tsc/app",
    "target": "ES2022",
    "module": "es2020",
    "baseUrl": "",
    "types": [],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": { "preserveWhitespaces": false },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
